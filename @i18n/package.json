{
  "name": "zzoo-react-i18n",
  "version": "0.0.1",
  "description": "Platform-agnostic internationalization library with TypeScript support",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translation",
    "localization",
    "typescript",
    "platform-agnostic"
  ],
  "author": "zzoo",
  "license": "MIT",
  "sideEffects": false,
  "devDependencies": {},
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zzoohub/react-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/zzoohub/react-toolkit/issues"
  },
  "homepage": "https://github.com/zzoohub/react-toolkit#readme"
}
