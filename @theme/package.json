{
  "name": "zzoo-react-theme",
  "version": "0.0.3",
  "description": "A React theme provider with SSR support for light/dark mode switching",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "publish": "npm run build && npm publish --access public",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "theme",
    "dark-mode",
    "light-mode",
    "ssr",
    "typescript"
  ],
  "author": "zzoo",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/zzoohub/react-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/zzoohub/react-toolkit/issues"
  },
  "homepage": "https://github.com/zzoohub/react-toolkit#readme"
}
